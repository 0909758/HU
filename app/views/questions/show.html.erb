<div class="container">
  <div class="lead well">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="<%= @question.gravatar %>">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= @question.email %> asked:</h4>
        <div><%= time_ago_in_words @question.created_at %> ago</div>
        <%= @question.body %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <div>
      <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new-answer-modal">Submit new answer</button>
    </div>

    <%= render 'home/new_answer_form' %>

    <% @answers.each do |a| %>
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="<%= a.gravatar %>">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= a.email %> answered:</h4>
          <%= a.body %>
        </div>
      </div>
    <% end %>

    <% if @answers.empty? %>
      <div class="alert alert-info">Nothing here yet, be the first to answer!</div>
    <% end %>

  </div>
</div>
